<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#fafcfd"
        app:cardElevation="4dp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/book_cover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/medbookcover"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title_book"
                android:layout_below="@id/book_cover"
                android:text="Essentials of Medical Pharmacology"
                android:textSize="15sp"
                android:textColor="#111112"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/author_name"
                android:text="Book by KD Tripathi"
                android:textSize="13sp"
                android:textColor="#2d2424"

                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/title_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/myDot"
                app:srcCompat="@drawable/ic_dots"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/book_cover"
                android:layout_marginTop="13dp"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="20dp"
                android:layout_height="30dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>